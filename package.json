{
  "name": "eallion.com",
  "version": "v6.0.1",
  "description": "eallion.com hugo blog theme by pehtheme",
  "private": true,
  "hugo-bin": {
    "buildTags": "extended"
  },
  "scripts": {
    "build": "run-s clean directus build:css build:hugo build:pagefind llms",
    "build:chroma": "hugo gen chromastyles --style=onedark > assets/css/chroma.css",
    "build:css": "cross-env NODE_ENV=production npx tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css",
    "build:hugo": "hugo --minify --gc",
    "build:pagefind": "npx pagefind --site public --output-subdir pagefind --force-language zh",
    "clean": "run-p clean:article clean:data clean:hugo",
    "clean:article": "rimraf ./content/blog/*.md",
    "clean:data": "rimraf ./assets/data/*",
    "clean:hugo": "rimraf public",
    "dev": "run-p dev:css dev:hugo",
    "dev:css": "cross-env NODE_ENV=development npx tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --watch",
    "dev:hugo": "open-cli http://127.0.0.1:1313 && hugo server -w -D -p 1313 --bind 0.0.0.0 --contentDir content -e production --gc --minify --disableKinds RSS --disableFastRender --renderToMemory --printUnusedTemplates --templateMetrics --templateMetricsHints",
    "dev:pagefind": "npx pagefind --site public --output-subdir pagefind --force-language zh --serve",
    "directus": "run-p clean directus:article directus:friendslinks directus:neodb directus:penta",
    "directus:album": "node scripts/directus-fetch-mastodon-album.js",
    "directus:anynow": "node scripts/directus-fetch-anynow.js",
    "directus:article": "node scripts/directus-fetch-article.js",
    "directus:friendslinks": "node scripts/directus-fetch-friends-links.js",
    "directus:goods": "node scripts/directus-fetch-goods.js",
    "directus:latest": "node scripts/directus-fetch-latest-10-article.js",
    "directus:mastodon": "node scripts/directus-fetch-mastodon.js",
    "directus:neodb": "node scripts/directus-fetch-neodb-count.js",
    "directus:penta": "node scripts/directus-fetch-penta-count.js",
    "llms": "node scripts/generate-llms.js",
    "new": "node scripts/new_post.js",
    "theme:init": "git submodule update --init --recursive",
    "theme:update": "git submodule update --remote --force themes/pehe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eallion/eallion.com"
  },
  "keywords": [
    "博客",
    "主题",
    "blog",
    "directus",
    "eallion",
    "hugo-theme",
    "hugo",
    "m3",
    "Material Design",
    "MD3",
    "neodb",
    "Pehe",
    "pehtheme",
    "tailwind",
    "tailwindcss",
    "theme"
  ],
  "author": "Charles Chin",
  "license": "GLWTPL",
  "bugs": {
    "url": "https://github.com/eallion/eallion.com/issues"
  },
  "homepage": "https://github.com/eallion/eallion.com#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "axios": "^1.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.1.0",
    "tailwindcss": "^4.1.17"
  }
}
